{
  "buildCommand": "cd /vercel/path0/frontend && npm run build",
  "outputDirectory": "out",
  "installCommand": "cd /vercel/path0/frontend && npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://elca-blockbusters-api.onrender.com/api/:path*"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://elca-blockbusters-api.onrender.com"
  }
}